{
	"name": "Debian",
	"image": "mcr.microsoft.com/devcontainers/base:bullseye@sha256:7916038fd9711a5ee6a76b3881c3fbe8e54999064e33c5de01c07d6786085f14",
	"containerEnv": {
		"SHELL": "/bin/zsh"
	},
	"features": {
		"ghcr.io/devcontainers/features/aws-cli:1": {
			"version": "latest"
		},
		"ghcr.io/devcontainers/features/docker-in-docker:2": {},
		"ghcr.io/devcontainers/features/github-cli:1": {},
		"ghcr.io/devcontainers/features/python:1": {
			"version": "3.14",
			"installTools": false
		},	
		"ghcr.io/devcontainers/features/terraform:1": {
			"version": "1.10.3",
			"tflint": "latest",
			"terragrunt": "0.58.3"
		}
	},
	"customizations": {
		"vscode": {
			"extensions": [
				"hashicorp.terraform",
				"github.copilot",
				"github.vscode-github-actions",
				"hashicorp.hcl",
				"redhat.vscode-yaml",
				"timonwong.shellcheck",
				"ms-python.python"
			]
		}
	},
	"remoteUser": "vscode"
}
