{
	"name": "Debian",
	"image": "mcr.microsoft.com/devcontainers/base:bullseye@sha256:03e618ae2b25d068f292c99220b2b055007694d1e1ad7fac34b02d8060a7f504",
	"containerEnv": {
		"SHELL": "/bin/zsh"
	},
	"features": {
		"ghcr.io/devcontainers/features/aws-cli:1": {
			"version": "latest"
		},
		"ghcr.io/devcontainers/features/docker-in-docker:2": {},
		"ghcr.io/devcontainers/features/github-cli:1": {},
		"ghcr.io/devcontainers/features/python:1": {
			"version": "3.14",
			"installTools": false
		},	
		"ghcr.io/devcontainers/features/terraform:1": {
			"version": "1.14.4",
			"tflint": "latest",
			"terragrunt": "0.99.1"
		}
	},
	"customizations": {
		"vscode": {
			"extensions": [
				"hashicorp.terraform",
				"github.copilot",
				"github.vscode-github-actions",
				"hashicorp.hcl",
				"redhat.vscode-yaml",
				"timonwong.shellcheck",
				"ms-python.python"
			]
		}
	},
	"remoteUser": "vscode"
}
